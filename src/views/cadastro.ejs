<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta</h1>
      <p class="text-center lead">Crie sua nova conta abaixo:</p>

      <div class="row">

        <div class="col-lg">
          <h4>Faça seu cadastro</h4>
          <p>Se você ainda não tem uma conta, então preencha o formulário abaixo:</p>
          
          <%- include('includes/messages'); %>

          <form class="form-cadastro" action="/cadastro/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label>Email</label>
              <input type="email" class="form-control" name="email" placeholder="seu e-mail">
            </div>
            <div class="form-group">
              <label>Senha</label>
              <input type="password" class="form-control" name="password" placeholder="sua senha">
            </div>
            <div class="msg"></div>
            <button type="submit" class="btn btn-primary">Criar minha conta</button>
          </form>

        </div>

      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>
